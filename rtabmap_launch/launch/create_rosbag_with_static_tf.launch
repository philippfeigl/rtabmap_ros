<?xml version="1.0" encoding="ISO-8859-15"?>
<launch>
    
    <arg name="input_bag" />
    <arg name="output_bag" default="$(arg input_bag)_with_static_tf" />

    <param name="use_sim_time"  value="true" />
    <include file="$(find rtabmap_launch)/launch/tf_static_pub.launch" />

    <node pkg="rosbag" type="record" name="rosbag_record" args="record -O $(arg output_bag) -a"/>

    <node pkg="rosbag" type="play"  name="rosbag_play" args="--clock $(arg input_bag)" />
    
</launch>